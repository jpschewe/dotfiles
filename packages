### ant
case $OSTYPE in
  cygwin)
          if [ -e c:/packages/ant ]; then
            ANT_HOME=c:/packages/ant
            U_ANT_HOME=`cygpath "${ANT_HOME}"`
          fi
          ;;
  linux)
         if [ -e /usr/local/ant/apache-ant-1.7.0 ]; then
           ANT_HOME=/usr/local/ant/apache-ant-1.7.0
         elif [ -e /usr/local/apache-ant-1.7.0 ]; then
           ANT_HOME=/usr/local/apache-ant-1.7.0
         elif [ -e /usr/local/apache-ant-1.6.5 ]; then
           ANT_HOME=/usr/local/apache-ant-1.6.5
         elif [ -e /usr/local/apache-ant-1.6.2 ]; then
           ANT_HOME=/usr/local/apache-ant-1.6.2
         elif [ -e /usr/share/ant ]; then
           ANT_HOME=/usr/share/ant
         elif [ -e /opt/jakarta/ant ]; then
           ANT_HOME=/opt/jakarta/ant
         fi
         U_ANT_HOME=${ANT_HOME}
         ;;
esac
if [ -n "${ANT_HOME}" ]; then
  export ANT_HOME
  prepend PATH ${U_ANT_HOME}/bin
fi
export ANT_OPTS="-Xmx256M -XX:MaxPermSize=128m"

