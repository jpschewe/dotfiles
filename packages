           ANT_HOME=/usr/share/ant
         else 
           ANT_HOME=/opt/jakarta/ant
         fi
         ;;
  *)
     ANT_HOME=/net/packages/java/ant/1.6.1/apache-ant-1.6.1
     ;;
esac
