set rev-args = --all


bind status + !git commit --amend
bind status P !git push -u origin %(repo:head)


bind main B !git rebase -i %(commit)
bind main F !git fetch -p origin
bind main T !git tag -a "%(prompt Enter tag name: )" %(commit)
bind main W !@git branch "%(prompt Enter branch name: )" %(commit)


bind refs ! !git branch -d %(branch)
bind refs P !git push -u origin %(branch)
bind refs T !git tag -a "%(prompt Enter tag name: )" %(commit)
bind refs W !@git branch "%(prompt Enter branch name: )" %(commit)
bind refs E !@git tag -d %(tag)

bind refs Z !git push origin --delete %(branch)

bind refs M !git merge %(branch)
bind refs > !git merge --ff-only %(branch)
bind refs <LessThan> !git merge --no-ff %(branch)
